<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Inner background -->
    <solid android:color="#121212" />

    <!-- Border stroke -->
    <stroke
        android:width="1dp"
        android:color="#2A2A2A" />

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Optional subtle padding inside -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
