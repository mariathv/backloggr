<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chip_background</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BottomNavCompact" parent="Widget.Material3.BottomNavigationView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="BottomNavIndicator">
        <item name="android:color">#1AE91E63</item>
        <item name="android:width">72dp</item>
        <item name="android:height">48dp</item>
        <item name="shapeAppearance">@style/IndicatorShapeAppearance</item>
    </style>

    <style name="IndicatorShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
