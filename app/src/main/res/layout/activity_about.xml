<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".SettingsActivity">

    <!-- ─────── TOP TOOLBAR ─────── -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/backlogger1"
            android:contentDescription="Backloggr Logo" />

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Backloggr"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Profile Circle -->
        <ImageView
            android:id="@+id/profileCircleTop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/profile_placeholder"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile"
            android:padding="0dp" />
    </LinearLayout>

    <!-- ─────── SUB TOOLBAR (About Header) ─────── -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <ImageView
            android:id="@+id/gear"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/info"
            android:background="@drawable/circle_background"
            android:backgroundTint="#2c1a25"
            app:tint="#E91E63"
            android:layout_marginStart="60dp"
            android:padding="1dp" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="About Backloggr"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- ─────── SCROLLABLE CONTENT ─────── -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- About Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:backgroundTintMode="src_over"
                android:clipToOutline="true"
                android:backgroundTint="#1E1E1E"
                android:radius="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/backlogger1"
                    android:contentDescription="App Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Backloggr"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Organize your games, conquer your backlog"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Version: 1.0.0"
                    android:textColor="#FFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Build: 100"
                    android:textColor="#FFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Features Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:elevation="4dp"
                android:clipToOutline="true"
                android:radius="12dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/trophy"
                        app:tint="#FFFFFF"
                        android:contentDescription="Features" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Features"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Features Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="12dp">

                    <!-- Feature 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Track your gaming backlog"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                    <!-- Feature 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp"
                            />

                        <TextView
                            android:text="Personal screenshots"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Feature 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Game recommendations"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Feature 5 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Community reviews"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Feature 6 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Cross-device sync"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Feature 7 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Achievement tracking"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Feature 8 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Detailed insights"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <!-- Feature 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:backgroundTint="#E91E63"
                            android:background="@drawable/dot"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Progress monitoring"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
