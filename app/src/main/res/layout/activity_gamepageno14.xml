<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".GameDetailsActivity">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/backlogger1"
            android:contentDescription="Backloggr Logo" />

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Backloggr"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Profile Circle -->
        <ImageView
            android:id="@+id/profileCircleTop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/profile_placeholder"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFFF"
            android:contentDescription="Profile"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <?xml version="1.0" encoding="utf-8"?>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#121212">

                <!-- Banner section (image background with overlay elements) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="#000000">

                    <!-- Background image -->
                    <ImageView
                        android:id="@+id/bannerImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cyberpunk_banner"
                        android:scaleType="centerCrop"
                        android:contentDescription="Game Banner" />

                    <!-- Gradient overlay for readability -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/banner_gradient_overlay" />


                    <!-- Back button -->
                    <ImageButton
                        android:id="@+id/backButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_margin="12dp"
                        android:background="@drawable/circle_transparent_bg"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="#FFFFFF"
                        android:contentDescription="Back Button" />

                    <!-- Game info container (bottom overlay) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Title and "In Library" button in one row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/gameTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cyberpunk 2077"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/inLibraryButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Library"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:background="@drawable/rounded_pink_button" />
                        </LinearLayout>

                        <!-- Genre and Rating Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/genreTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Action RPG"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:background="@drawable/chip_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"/>

                            <RatingBar
                                android:id="@+id/gameRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:numStars="5"
                                android:rating="4"
                                android:stepSize="0.5"
                                android:isIndicator="true"
                                style="?android:attr/ratingBarStyleSmall"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:progressTint="#E91E63"/>

                            <TextView
                                android:id="@+id/numericRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.2"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Platform Chips -->
            <LinearLayout
                android:id="@+id/platformChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <TextView
                    style="@style/ChipStyle"
                    android:text="PC" />

                <TextView
                    style="@style/ChipStyle"
                    android:text="PlayStation 5" />

                <TextView
                    style="@style/ChipStyle"
                    android:text="Xbox Series X/S" />
            </LinearLayout>

            <!-- Status Buttons -->
            <LinearLayout
                android:id="@+id/statusButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCurrentlyPlaying"
                    style="@style/StatusButtonActive"
                    android:text="Currently Playing" />

                <Button
                    android:id="@+id/btnCompleted"
                    style="@style/StatusButtonInactive"
                    android:text="Completed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    style="@style/StatusButtonInactive"
                    android:text="Backlogged" />

                <Button
                    style="@style/StatusButtonInactive"
                    android:text="On Hold" />

                <Button
                    style="@style/StatusButtonInactive"
                    android:text="Dropped" />
            </LinearLayout>

            <!-- Progress Message -->
            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're currently playing this game. Keep up the great progress!"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="12dp" />

            <!-- Tabs (Progress, Photos, Notes, Overview) -->
            <LinearLayout
                android:id="@+id/tabSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    style="@style/TabButton"
                    android:text="Progress" />

                <Button
                    style="@style/TabButtonActive"
                    android:text="Photos" />

                <Button
                    style="@style/TabButton"
                    android:text="Notes" />

                <Button
                    style="@style/TabButton"
                    android:text="Overview" />
            </LinearLayout>

            <!-- Photos Section -->
            <LinearLayout
                android:id="@+id/photoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="#1E1E1E"
                android:padding="12dp"
                android:elevation="3dp"
                android:clipToOutline="true"
                android:outlineProvider="background">

                <TextView
                    android:text="Personal Screenshots"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/addPhotoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_pink_button"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp" />

                <ImageView
                    android:id="@+id/sampleScreenshot"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/screenshot_sample"
                    android:background="@drawable/rounded_corners"
                    android:contentDescription="Screenshot" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
