<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:id="@+id/main"
   >

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/backlogger1"
            android:contentDescription="App Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Backloggr"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/profile_placeholder"
            android:contentDescription="Profile"
            android:padding="2dp" />
    </LinearLayout>

    <!-- Game Library Header -->
    <LinearLayout
        android:id="@+id/libraryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Game Library"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddGame"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add Game"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2A2A2A"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/search_background"
        android:hint="Search your games..."
        android:textColorHint="#666666"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/libraryHeader" />

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filterChipsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchBar">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All (6)"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="@color/primary"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPlaying"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playing (1)"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#2A2A2A"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCompleted"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed (1)"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#2A2A2A"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBacklogged"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backlogged (2)"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#2A2A2A"
                app:checkedIconVisible="false" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Platform Filter and Actions -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/platformFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#121212"
        app:layout_constraintTop_toBottomOf="@id/filterChipsScrollView">

        <!-- Platform Dropdown -->
        <Spinner
            android:id="@+id/spinnerPlatform"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background_dark"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content"
            android:entries="@array/platforms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Grid View Button (active) -->
        <ImageButton
            android:id="@+id/btnGrid"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_grid"
            android:background="@drawable/active_button_background"
            android:contentDescription="Grid View"
            app:tint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/btnList"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" />

        <!-- List View Button (inactive) -->
        <ImageButton
            android:id="@+id/btnList"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_list"
            android:background="@drawable/inactive_button_background"
            android:contentDescription="List View"
            app:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Games Count -->
    <TextView
        android:id="@+id/tvGamesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 games found"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/platformFilter"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Games RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gamesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvGamesCount"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        tools:listitem="@layout/item_library_game" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:itemIconSize="22dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        style="@style/BottomNavCompact"
        app:labelVisibilityMode="labeled"
        app:itemActiveIndicatorStyle="@style/BottomNavIndicator"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>