<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".EditProfileActivity"
    android:id="@+id/main">

    <!-- ====== Top Toolbar ====== -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/backlogger1"
            android:contentDescription="App Logo" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Backloggr"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileCircleTop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/profile_placeholder"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFFF"
            android:contentDescription="Profile"
            android:padding="0dp" />
    </LinearLayout>

    <!-- ====== Sub Toolbar ====== -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/topToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="110dp"
            android:src="@drawable/profile"
            app:tint="#E91E63"
            android:contentDescription="Gear Icon" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FF007F"
            android:layout_marginStart="40dp"
            />
    </LinearLayout>

    <!-- ====== Profile Section ====== -->
    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circular Avatar -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile2"
            android:padding="6dp"
            android:contentDescription="Profile Picture" />

        <!-- Change Photo Button -->
        <Button
            android:id="@+id/changePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:drawablePadding="8dp"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:stateListAnimator="@null"
            app:cornerRadius="8dp"
            app:backgroundTint="#1A1A1A"
            app:strokeColor="#333333"
            app:strokeWidth="1dp"
            />
    </LinearLayout>

    <!-- ====== Basic Information Section ====== -->
    <LinearLayout
        android:id="@+id/basicInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:outlineProvider="background"
        app:layout_constraintTop_toBottomOf="@id/profileSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="Basic Information"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Display Name"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GamerPro"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp" />


        <TextView
            android:text="Username"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="gamerpro2024"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:text="Email"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="gamerpro@example.com"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:text="Bio"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="top"
            android:hint="Passionate gamer exploring digital worlds..."
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
