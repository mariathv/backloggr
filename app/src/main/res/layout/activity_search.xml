<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <!-- Scrollable main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/backlogger1"
                    android:contentDescription="Logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backloggr"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/profile2"
                    android:background="@drawable/profile_circle"
                    android:contentDescription="Profile" />
            </LinearLayout>

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#AAAAAA" />

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search games, developers..."
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666666"
                    android:paddingHorizontal="8dp"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/filterButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_filter"
                    app:tint="#AAAAAA" />
            </LinearLayout>

            <!-- Game Grid (2 Columns) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Game Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover_lastofus1" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action RPG"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/tag_pink"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2022"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/tag_dark"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Last Of Us Part 1"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Game Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover_lastofus2" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Racing"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/tag_yellow"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/tag_dark"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Last Of Us Part 2"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Add more cards similarly... -->

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</LinearLayout>